<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/activity_user_btn_addUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:text="添加用户" />

    <Button
        android:id="@+id/activity_user_btn_delUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_btn_addUser"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:text="删除用户" />

    <Button
        android:id="@+id/activity_user_btn_updateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_btn_delUser"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:text="修改用户信息" />

    <Button
        android:id="@+id/activity_user_btn_lookup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_btn_updateUser"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:text="查询用户信息" />

    <Button
        android:id="@+id/activity_user_btn_allUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_btn_lookup"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:text="所有用户信息" />

</RelativeLayout>