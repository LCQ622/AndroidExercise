<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">



    <TextView
        android:id="@+id/activity_system_add_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="添加图书"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/activity_system_add_ed_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="书籍名称" />

    <EditText
        android:id="@+id/activity_system_add_ed_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="作者" />

    <EditText
        android:id="@+id/activity_system_add_ed_ISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISBN" />

    <EditText
        android:id="@+id/activity_system_add_ed_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="出版时间  2018-6-25" />


    <EditText
        android:id="@+id/activity_system_add_ed_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="库存" />

    <EditText
        android:id="@+id/activity_system_add_ed_msg"
        android:lines="6"
        android:background="@null"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="书籍简介..." />

    <Button
        android:id="@+id/activity_system_add_btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="提交"
        android:textSize="20sp" />

</LinearLayout>