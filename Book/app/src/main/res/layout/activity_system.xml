<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/activity_system_btn_add"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="添加图书" />

    <Button
        android:id="@+id/activity_system_btn_del"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="删除图书" />

    <Button
        android:id="@+id/activity_system_btn_lookup"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="查找图书" />

    <Button
        android:id="@+id/activity_system_btn_up"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="修改图书" />

    <Button
        android:id="@+id/activity_system_btn_all"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="所有图书" />
</LinearLayout>